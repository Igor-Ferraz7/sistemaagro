generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Tabela de Pessoas (Fornecedores, Clientes, etc)
model Pessoas {
  idPessoas   Int      @id @default(autoincrement())
  tipo        String   @db.VarChar(45)  // Física ou Jurídica
  razaosocial String?  @db.VarChar(150)
  fantasia    String?  @db.VarChar(150)
  documento   String   @db.VarChar(45)  // CPF ou CNPJ
  status      String   @db.VarChar(45)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamentos
  movimentosComoFornecedorCliente MovimentoContas[] @relation("FornecedorCliente")
  movimentosComoFaturado          MovimentoContas[] @relation("Faturado")

  @@unique([documento])
  @@map("pessoas")
}

// Tabela de Classificação
model Classificacao {
  idClassificacao Int      @id @default(autoincrement())
  tipo            String   @db.VarChar(45)  // receita, despesa
  descricao       String   @db.VarChar(150)
  status          String   @db.VarChar(45)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relacionamentos
  movimentos MovimentoContasClassificacao[]

  @@map("classificacao")
}

// Tabela de Movimento de Contas
model MovimentoContas {
  idMovimentoContas            Int      @id @default(autoincrement())
  tipo                         String   @db.VarChar(45)  // receita, despesa
  numeronotafiscal             String?  @db.VarChar(45)
  datemissao                   DateTime @db.Date
  descricao                    String   @db.VarChar(300)
  status                       String   @db.VarChar(45)  // pendente, quitado
  valortotal                   Decimal  @db.Decimal(10, 2)
  Pessoas_idFornecedorCliente  Int
  Pessoas_idFaturado           Int
  createdAt                    DateTime @default(now())
  updatedAt                    DateTime @updatedAt

  // Relacionamentos
  fornecedorCliente Pessoas                        @relation("FornecedorCliente", fields: [Pessoas_idFornecedorCliente], references: [idPessoas])
  faturado          Pessoas                        @relation("Faturado", fields: [Pessoas_idFaturado], references: [idPessoas])
  parcelas          ParcelaContas[]
  classificacoes    MovimentoContasClassificacao[]

  @@map("movimento_contas")
}

// Tabela de Parcelas de Contas
model ParcelaContas {
  idParcelasContas                Int      @id @default(autoincrement())
  identificacao                   String   @db.VarChar(45)
  datavencimento                  DateTime @db.Date
  valorparcela                    Decimal  @db.Decimal(10, 2)
  valorpago                       Decimal  @db.Decimal(10, 2) @default(0)
  valorsaldo                      Decimal  @db.Decimal(10, 2)
  statusparcela                   String   @db.VarChar(45)  // pago, pendente
  MovimentoContas_idMovimentoContas Int
  createdAt                       DateTime @default(now())
  updatedAt                       DateTime @updatedAt

  // Relacionamentos
  movimento MovimentoContas @relation(fields: [MovimentoContas_idMovimentoContas], references: [idMovimentoContas], onDelete: Cascade)

  @@map("parcela_contas")
}

// Tabela de relacionamento N para N entre MovimentoContas e Classificacao
model MovimentoContasClassificacao {
  MovimentoContas_idMovimentoContas Int
  Classificacao_idClassificacao     Int
  createdAt                         DateTime @default(now())

  // Relacionamentos
  movimento     MovimentoContas @relation(fields: [MovimentoContas_idMovimentoContas], references: [idMovimentoContas], onDelete: Cascade)
  classificacao Classificacao   @relation(fields: [Classificacao_idClassificacao], references: [idClassificacao], onDelete: Cascade)

  @@id([MovimentoContas_idMovimentoContas, Classificacao_idClassificacao])
  @@map("movimento_contas_classificacao")
}